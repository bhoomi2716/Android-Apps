<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytLinearForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forgot_pass_bg"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_13sdp"
        android:paddingVertical="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sure_to_exit"
            android:fontFamily="@font/helvetica_neue_black"
            android:textColor="@color/facebook_btn_bg_color"
            android:textSize="@dimen/_17ssp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/facebook_btn_bg"
                android:fontFamily="@font/helvetica_neue_medium"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:stateListAnimator="@null"
                android:text="@string/yes"
                android:textColor="@color/light_btn_bg_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:background="@drawable/facebook_btn_bg"
                android:text="@string/no"
                android:letterSpacing="0.1"
                android:textColor="@color/light_btn_bg_color"
                android:textStyle="bold"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
